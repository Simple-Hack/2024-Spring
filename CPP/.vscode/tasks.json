{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++生成",
            "command": "D:\\Code-Space\\GCC\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "D:/VsFile/build_exe_file/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译当前活动文件并生成可执行文件"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\Code-Space\\GCC\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:\\Code-Space\\GCC\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}